<!-- .hero -->
<section class='hero'>
    <div class='header-color hero-body'>
        <div class='container'>
            <div class='has-text-right'>
                <h3 id='username' class='subtitle '>
                    Hello, {{Username}}!
                </h3>
                <a class='button is-small is-primary' id='logoutBtn'
                    style="border-color:#FFFFFF; background-color:rgba(0,0,0,0); color:#FFFFFF">Logout</a>
            </div>

            <span class='has-text-centered'>
                {{!-- <h1 class='title has-text-light'>
                    Shelfie
                </h1> --}}
                <img class="has-image-centered" src="../images/shelfie.png" alt="shelfie"
                    style="width:250px;height:250px;">
                <p class='subtitle has-text-centered has-text-light'>
                    Your personal virtual library!
                </p>
            </span>

        </div>
    </div>
</section>
<br>
<br>
<!-- /.hero -->
<!-- .section -->
<section class='section'>
    <div class=' container'>
        <form>
            <div class='columns is-centered'>
                <div class='column is-half center'>
                    <!-- FORM HERE -->
                    <input id='searchBar' class='input is-rounded' type='text' placeholder='Search Books'>
                    <input class='button is-primary is-light' type='submit' value='Submit' id='searchBtn'></button>
                </div>
        </form>

    </div>
    <br>
    <br>
    <div class="columns">
        <div class="column" id="bookDiv">
        </div>
    </div>
    <div class='container'>
        <div class='columns'>
            <div class='column'>
                <div class='shelf notification center'>
                    <h1>BOOKS I WANT TO READ</h1>
                    <br>
                    <ol>
                        {{#each Unread}}
                        <p data-id={{book_id}}> {{book_title}} </p>
                        {{/each}}
                    </ol>
                </div>
            </div>
            <div class='column'>
                <div class='shelf notification center'>
                    <h1>BOOKS I'VE READ</h1>
                    <br>
                    <ol>
                        {{#each Read}}
                        <p data-id={{book_id}}> {{book_title}} </p>
                        {{/each}}
                    </ol>
                </div>
            </div>
            <div class='column'>
                <div class='shelf notification center'>
                    <h1>
                        BOOKS I'M CURRENTLY READING
                    </h1>
                    <br>
                    <ol>
                        {{#each Current}}
                        <p data-id={{book_id}}> {{book_title}} </p>
                        {{/each}}
                    </ol>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- /.section -->
<script type="text/javascript" src="../js/members.js"></script>
<script src="../js/books.js"></script>